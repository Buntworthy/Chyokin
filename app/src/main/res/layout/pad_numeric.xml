<?xml version="1.0" encoding="utf-8"?>

<com.cutsquash.chyokin.total.CalculatorNumericPadLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pad_numeric"
    android:columnCount="3"
    android:rowCount="4"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <Button
        android:id="@+id/digit_7"
        android:onClick="onButtonClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/digit_8"
        android:onClick="onButtonClick"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/digit_9"
        android:onClick="onButtonClick"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/digit_4"
        android:onClick="onButtonClick"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/digit_5"
        android:onClick="onButtonClick"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/digit_6"
        android:onClick="onButtonClick"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/digit_1"
        android:onClick="onButtonClick"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/digit_2"
        android:onClick="onButtonClick"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/digit_3"
        android:onClick="onButtonClick"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/dec_point"
        android:onClick="onButtonClick"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/digit_0"
        android:onClick="onButtonClick"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/eq"
        android:contentDescription="equals"
        android:onClick="onButtonClick"
        android:text="equals"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</com.cutsquash.chyokin.total.CalculatorNumericPadLayout>
